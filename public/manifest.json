{
  "manifest_version": 3,
  "name": "AWS Account Manager",
  "version": "1.0.0",
  "description": "Securely store and quickly switch between multiple AWS accounts. Streamline your AWS workflow with encrypted account management.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*.signin.aws.amazon.com/*"],
  "action": {
    "default_popup": "index.html",
    "default_title": "AWS Account Manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.signin.aws.amazon.com/*"],
      "js": ["src/content/index.tsx"],
      "run_at": "document_idle"
    }
  ]
}
